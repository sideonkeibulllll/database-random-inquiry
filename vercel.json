{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm run build && node src/build-static.js",
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.html",
      "dest": "/static/$1.html",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0"
      }
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ]
}